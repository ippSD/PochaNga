<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ippsd.pochanga.MainActivity"
        android:backgroundTint="#009688"
        android:background="#009688">

    <TextView
            android:id="@+id/text_preview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/text_preview"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/button_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/button_start"
            android:onClick="buttonStart"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/text_preview"
            android:backgroundTint="#4CAF50"/>

    <!--Button
            android:id="@+id/button_n_groups"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/button_n_groups"
            android:onClick="buttonNGroups"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button_start"
            android:backgroundTint="#4CAF50"/-->


</android.support.constraint.ConstraintLayout>